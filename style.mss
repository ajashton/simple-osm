// A simple OSM2PGSQL stylesheet with colors & styles 
// mostly based on tag keys alone.

@land_fill:     #fff;

@amenity_fill:  #fff0c0;
@historic_fill: #e3d7f4;
@leisure_fill:  #d4f8e6;
@shop_fill:     #d7f4ee;
@tourism_fill:  #f4d7ee;

@amenity_line:  darken(@amenity_fill, 25%);
@historic_line: darken(@historic_fill, 25%);
@leisure_line:  darken(@leisure_fill, 25%);
@shop_line:     darken(@shop_fill, 25%);
@tourism_line:  darken(@tourism_fill, 25%);